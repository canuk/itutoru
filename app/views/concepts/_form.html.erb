<%= form_with(model: concept) do |form| %>
  <% if concept.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(concept.errors.count, "error") %> prohibited this concept from being saved:</h2>

      <ul>
        <% concept.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label "Subject Matter", style: "display: block" %>
    <%= form.collection_select :subject_matter_id, SubjectMatter.all, :id, :name, {}, {class: 'form-select'} %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :concept_prompt, style: "display: block" %>
    <%= form.text_field :concept_prompt, class: 'form-control' %>
  </div>

  <div>
    <%= form.label :notes, style: "display: block" %>
    <%= form.text_area :notes, class: 'form-control' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
